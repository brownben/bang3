{
  "name": "bang",
  "displayName": "Bang",
  "description": "My Language",
  "publisher": "brownben",
  "icon": "./icons/logo.png",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "bang",
        "extensions": [
          ".bang"
        ],
        "aliases": [
          "Bang",
          "bang"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/logo.svg",
          "dark": "./icons/logo.svg"
        }
      }
    ],
    "configuration": {
      "properties": {
        "bang.server.path": {
          "type": [
            "null",
            "string"
          ],
          "scope": "machine-overridable",
          "default": null,
          "markdownDescription": "Path to bang executable (points to `bang` in path as default)."
        }
      }
    },
    "grammars": [
      {
        "language": "bang",
        "scopeName": "source.bang",
        "path": "./syntaxes/bang.tmLanguage.json"
      }
    ],
    "semanticTokenTypes": [
      {
        "id": "boolean",
        "description": "Style for boolean literals",
        "superType": "keyword"
      }
    ],
    "semanticTokenScopes": [
      {
        "language": "bang",
        "scopes": {
          "boolean": [
            "constant.language.boolean.bang"
          ],
          "keyword.declaration": [
            "storage.type.bang"
          ]
        }
      }
    ]
  },
  "main": "./dist/extension.js",
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@types/node": "^24.3.0",
    "@types/vscode": "^1.103.0",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "lint": "biome lint --write",
    "format": "biome format --write",
    "check": "biome check",
    "build": "tsc"
  }
}
